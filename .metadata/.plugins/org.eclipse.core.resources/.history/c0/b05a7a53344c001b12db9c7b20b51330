package chess;

public class ChessPosition {
	
	private char column;
	private int row;
	
	
	public ChessPosition(char column, int row) {
		if(column < 'a' || column > 'h' || row < 1 || row > 8) {
			throw new ChessException("Erro ao instanciar a Posicao, forneca um valor entre a1 e h8.");
		}
		this.column = column;
		this.row = row;
	}
	
	

}
